# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/cursor-dating
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/cursor-dating

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
